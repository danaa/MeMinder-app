<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android2:id="@+id/whatTextView"
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text=""
        android2:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android2:id="@+id/optionalTextView"
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text=""
        android2:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android2:id="@+id/whenTextView"
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text=""
        android2:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android2:id="@+id/notificationTextView"
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text="Notification times:"
        android2:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android2:id="@+id/timesTextView"
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text=""
        android2:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android2:layout_width="fill_parent"
        android2:layout_height="wrap_content" >

    </LinearLayout>

</LinearLayout>