<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainTopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#293741"
        >

        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:background="@drawable/top_button_main"
            android:src="@drawable/ic_action_new" 
            />

        <ImageButton
            android:id="@+id/clockButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:background="@drawable/top_button_main"
            android:src="@drawable/ic_action_alarms" 
            />

        <ImageButton
            android:id="@+id/calButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:background="@drawable/top_button_main"
            android:src="@drawable/ic_action_go_to_today" 
            />
    </LinearLayout>

    <ListView
        android:id="@+id/agendaListView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:background="#fff"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#01B6AD"
        >

        <Button
            android:id="@+id/remindButton"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/bottom_button"
            android:textColor="#fff"
            android:text="Remind me" 
            />

        <Button
            android:id="@+id/weekButton"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#293741"
            android:textColor="#fff"
            android:text="This week" 
            />

        <Button
            android:id="@+id/twoWeeksButton"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#293741"
            android:textColor="#fff"
            android:text="2 weeks" 
            />

    </LinearLayout>

</LinearLayout>