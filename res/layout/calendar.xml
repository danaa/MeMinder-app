<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android2:layout_width="fill_parent"
        android2:layout_height="wrap_content" >

        <TextView
            android2:id="@+id/calendarTextView"
            android2:layout_width="wrap_content"
            android2:layout_height="wrap_content"
            android2:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <ListView
        android2:id="@+id/calendarListView"
        android2:layout_width="fill_parent"
        android2:layout_height="wrap_content" >
    </ListView>

</LinearLayout>